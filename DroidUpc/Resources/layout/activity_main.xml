
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:stretchColumns="0">

			<TableRow
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<TableLayout
					android:layout_width="200dip"
					android:layout_height="wrap_content"
					android:stretchColumns="1">
					<TableRow
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<TextView
							android:text="Code"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:minWidth="25px"
							android:layout_marginLeft="4dip"
							android:minHeight="25px"
							android:id="@+id/tvCodeLabel" />
						<EditText
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_toRightOf="@id/tvCodeLabel"
							android:id="@+id/ebCode"
							android:inputType="number"
							android:selectAllOnFocus="true" />
					</TableRow>
					<TableRow
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<TextView
							android:text="Title"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:minWidth="25px"
							android:minHeight="25px"
							android:layout_marginLeft="4dip"
							android:id="@+id/tvTitleLabel" />
						<EditText
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_toRightOf="@id/tvTitleLabel"
							android:id="@+id/ebTitle"
							android:selectAllOnFocus="true" />
					</TableRow>
					<TableRow
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<TextView
							android:text="Location"
							android:textAppearance="?android:attr/textAppearanceSmall"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:minWidth="25px"
							android:minHeight="25px"
							android:layout_marginLeft="4dip"
							android:id="@+id/tvLocationLabel" />
						<EditText
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_toRightOf="@id/tvLocationLabel"
							android:id="@+id/ebLocation"
							android:selectAllOnFocus="true" />
					</TableRow>
				</TableLayout>
				<Spinner
					android:id="@+id/spinType"
					android:layout_width="85dip"
					android:layout_height="100dip"
					android:background="#c0c0c0"
					android:spinnerMode="dropdown"/>
			</TableRow>
		</TableLayout>
		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:id="@+id/ebTastingNotes"
			android:selectAllOnFocus="true" />
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:text="Col"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_marginLeft="4dip"
				android:id="@+id/tvColumnLabel" />
			<EditText
				android:layout_width="65dip"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:layout_toRightOf="@id/tvColumnLabel"
				android:id="@+id/ebColumn"
				android:selectAllOnFocus="true" />
			<TextView
				android:text="Row"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_marginLeft="4dip"
				android:id="@+id/tvRowLabel" />
			<EditText
				android:layout_width="65dip"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:inputType="number"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/tvRowLabel"
				android:id="@+id/ebRow"
				android:selectAllOnFocus="true" />
			<TextView
				android:text="BinCode"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="25px"
				android:minHeight="25px"
				android:layout_marginLeft="4dip"
				android:id="@+id/tvBinLabel" />
			<EditText
				android:layout_width="85dip"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:inputType="number"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/tvBinLabel"
				android:id="@+id/ebBin"
				android:selectAllOnFocus="true" />

		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<CheckBox
				android:text="Check Only"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/cbCheckOnly" />
			<CheckBox
				android:text="SimScan"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:id="@+id/cbSimScan" />
			<View
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:layout_weight="1" />
			<Button
				android:id="@+id/buttonManual"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:text="Manual"/>
			<Button
				android:id="@+id/buttonScan"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:text="Scan"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center">
			<androidx.fragment.app.FragmentContainerView
				android:id="@+id/frameScanner"
				android:layout_width="wrap_content"
				android:layout_height="250dip"/>
		</LinearLayout>
		<TextView
			android:id="@+id/tvStatus"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Status:" />
		<ScrollView
			android:id="@+id/svLog"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:scrollbars="vertical"
			android:paddingLeft="10dip"
			android:paddingRight="10dip">
			<TextView
				android:id="@+id/tvLog"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:scrollbars = "vertical"
				android:text=""
				android:scrollIndicators="none|right"
				android:scrollbarStyle="outsideOverlay" />
		</ScrollView>
	</LinearLayout>
</RelativeLayout>